@page "/tm/services"
@rendermode InteractiveServer
@layout Layout.TMLayout
@inject QMS.Domain.Interfaces.IRepository<QMS.Domain.Entities.ServiceType> ServiceTypeRepository
@inject QMS.Domain.Interfaces.IUnitOfWork UnitOfWork
@inject QMS.Web.Services.AuthenticationStateService AuthState
@inject NavigationManager Navigation

<div class="service-management-container">
    <!-- Header -->
    <PageHeader Title="Service Management" 
                Subtitle="Manage service types available in your branch"
                Icon="bi bi-grid-3x3-gap-fill" />
    
    <div class="mb-4 d-flex justify-content-between align-items-center">
        <div class="service-stats">
            <div class="stat-item">
                <i class="bi bi-grid-3x3-gap-fill"></i>
                <span class="stat-number">@(serviceList?.Count ?? 0)</span>
                <span class="stat-label">Total Services</span>
            </div>
            <div class="stat-item">
                <i class="bi bi-check-circle-fill"></i>
                <span class="stat-number">@(serviceList?.Count(s => s.IsActive) ?? 0)</span>
                <span class="stat-label">Active</span>
            </div>
        </div>
        <BaseButton Variant="primary" 
                   OnClick="ShowAddServiceModal"
                   Icon="bi bi-plus-circle">
            Add Service
        </BaseButton>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="text-muted mt-3">Loading services...</p>
        </div>
    }
    else if (serviceList != null && serviceList.Any())
    {
        <div class="service-grid">
            @foreach (var service in serviceList)
            {
                <div class="service-card @(!service.IsActive ? "inactive" : "")">
                    <div class="service-card-header" style="background: @service.ColorCode">
                        <div class="service-icon">
                            <i class="bi @service.IconClass"></i>
                        </div>
                    </div>
                    <div class="service-card-body">
                        <h5 class="service-name">@service.Name</h5>
                        <div class="service-code-badge">
                            <i class="bi bi-code-slash"></i>
                            <span>@service.Code</span>
                        </div>
                        @if (!string.IsNullOrEmpty(service.Description))
                        {
                            <p class="service-description">@service.Description</p>
                        }
                        <div class="service-status">
                            <span class="status-badge status-@(service.IsActive ? "active" : "inactive")">
                                <i class="bi bi-@(service.IsActive ? "check-circle-fill" : "pause-circle-fill")"></i>
                                @(service.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>
                    <div class="service-card-footer">
                        <BaseButton Variant="outline-primary" 
                                   Size="sm"
                                   OnClick="() => EditService(service)"
                                   Icon="bi bi-pencil">
                            Edit
                        </BaseButton>
                        <BaseButton Variant="@(service.IsActive ? "outline-warning" : "outline-success")" 
                                   Size="sm"
                                   OnClick="() => ToggleServiceStatus(service)"
                                   Icon="@(service.IsActive ? "bi bi-pause" : "bi bi-play")">
                            @(service.IsActive ? "Deactivate" : "Activate")
                        </BaseButton>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="bi bi-grid-3x3-gap"></i>
            </div>
            <h4>No Services Yet</h4>
            <p>Get started by adding your first service type to the system</p>
            <BaseButton Variant="primary" 
                       OnClick="ShowAddServiceModal"
                       Icon="bi bi-plus-circle">
                Add Your First Service
            </BaseButton>
        </div>
    }
</div>

<!-- Add/Edit Service Modal -->
<BaseModal @bind-IsOpen="showServiceModal" 
          Title="@(editingService?.Id > 0 ? "Edit Service" : "Add New Service")" 
          Size="lg"
          OnClose="CloseServiceModal">
    <HeaderContent>
        <i class="bi bi-grid-3x3-gap me-2"></i>
        @(editingService?.Id > 0 ? "Edit Service" : "Add New Service")
    </HeaderContent>
    <BodyContent>
        <!-- Preview -->
        <div class="mb-4 text-center">
            <div class="service-preview-card" style="background: @editingService.ColorCode">
                <div class="service-preview-icon">
                    <i class="bi @editingService.IconClass"></i>
                </div>
            </div>
            <small class="text-muted">Live Preview</small>
        </div>

        <div class="form-section">
            <div class="row">
                <div class="col-md-6">
                    <BaseInput Label="Service Name" 
                              @bind-Value="editingService.Name"
                              Placeholder="e.g., Account Opening" />
                </div>
                <div class="col-md-6">
                    <BaseInput Label="Service Code" 
                              @bind-Value="editingService.Code"
                              Placeholder="e.g., ACC_OPEN" />
                </div>
            </div>
            
            <BaseInput Label="Description" 
                      @bind-Value="editingService.Description"
                      Placeholder="Brief description of the service"
                      Rows="3" />

            <!-- Icon Picker -->
            <div class="mb-3">
                <label class="form-label fw-semibold text-secondary small text-uppercase mb-2">Choose Icon</label>
                <div class="icon-picker">
                    @foreach (var icon in availableIcons)
                    {
                        <div class="icon-option @(editingService.IconClass == icon ? "selected" : "")" 
                             @onclick="() => editingService.IconClass = icon">
                            <i class="bi @icon"></i>
                        </div>
                    }
                </div>
            </div>

            <!-- Color Picker -->
            <div class="mb-3">
                <label class="form-label fw-semibold text-secondary small text-uppercase mb-2">Choose Color</label>
                <div class="color-picker">
                    @foreach (var color in availableColors)
                    {
                        <div class="color-option @(editingService.ColorCode == color.Value ? "selected" : "")" 
                             style="background: @color.Value"
                             @onclick="() => editingService.ColorCode = color.Value"
                             title="@color.Key">
                            @if (editingService.ColorCode == color.Value)
                            {
                                <i class="bi bi-check-lg"></i>
                            }
                        </div>
                    }
                </div>
            </div>

            <BaseCheckbox Label="Active" 
                         @bind-Checked="editingService.IsActive" />
            <small class="text-muted d-block mt-1">Enable this service for use in the system</small>
        </div>
    </BodyContent>
    <FooterContent>
        <BaseButton Variant="secondary" OnClick="CloseServiceModal" Icon="bi bi-x-lg">
            Cancel
        </BaseButton>
        <BaseButton Variant="primary" OnClick="SaveService" Icon="bi bi-check-lg">
            @(editingService?.Id > 0 ? "Update Service" : "Add Service")
        </BaseButton>
    </FooterContent>
</BaseModal>

