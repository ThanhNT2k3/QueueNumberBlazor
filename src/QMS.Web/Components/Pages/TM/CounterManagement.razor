@inject NavigationManager Navigation

@inject QMS.Web.Services.AuthenticationStateService AuthState
@inject IQmsNotificationService NotificationService
@inject IServiceScopeFactory ScopeFactory
@layout TMLayout
@rendermode InteractiveServer

<style>
    .counters-page {
        max-width: 1400px;
        margin: 0 auto;
    }

    .page-header {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }

    .page-title {
        font-size: 32px;
        font-weight: 800;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .counters-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 1.5rem;
    }

    .counter-card {
        background: white;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        border: 2px solid transparent;
    }

    .counter-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        border-color: #667eea;
    }

    .counter-header {
        display: flex;
        justify-content: space-between;
        align-items: start;
        margin-bottom: 1rem;
    }

    .counter-name {
        font-size: 20px;
        font-weight: 700;
        color: #1e293b;
    }

    .counter-prefix {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 8px;
        font-size: 12px;
        font-weight: 700;
    }

    .counter-status {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .counter-status.online {
        background: #d1fae5;
        color: #065f46;
    }

    .counter-status.busy {
        background: #fef3c7;
        color: #92400e;
    }

    .counter-status.break {
        background: #dbeafe;
        color: #1e40af;
    }

    .counter-status.offline {
        background: #fee2e2;
        color: #991b1b;
    }

    .counter-status i {
        font-size: 8px;
    }

    .assigned-user {
        background: #f8fafc;
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 1rem;
    }

    .assigned-label {
        font-size: 11px;
        text-transform: uppercase;
        color: #94a3b8;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .user-info-compact {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .user-avatar-small {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 700;
        font-size: 12px;
    }

    .user-name-small {
        font-weight: 600;
        color: #1e293b;
        font-size: 14px;
    }

    .counter-services {
        background: #f8fafc;
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 1rem;
    }

    .services-label {
        font-size: 11px;
        text-transform: uppercase;
        color: #94a3b8;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .service-badges {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .service-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 8px;
        font-size: 11px;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
    }

    .service-badge.backup {
        background: #e2e8f0;
        color: #64748b;
    }

    .service-badge i {
        font-size: 10px;
    }

    .edit-services-btn {
        background: transparent;
        border: none;
        color: #667eea;
        cursor: pointer;
        padding: 0.25rem 0.5rem;
        border-radius: 6px;
        font-size: 11px;
        font-weight: 600;
        transition: all 0.2s;
        margin-left: auto;
    }

    .edit-services-btn:hover {
        background: #f0f3ff;
    }

    .services-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 0.5rem;
    }

    .service-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.75rem;
        background: white;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        margin-bottom: 0.5rem;
        transition: all 0.2s;
    }

    .service-item:hover {
        border-color: #667eea;
        background: #f8f9ff;
    }

    .service-item-left {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .service-checkbox {
