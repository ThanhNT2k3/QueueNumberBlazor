@page "/tm/counters"
@using QMS.Application.Interfaces
@using QMS.Domain.Entities
@using QMS.Web.Services
@using QMS.Web.Components.Layout
@using Microsoft.Extensions.DependencyInjection
@inject ICounterService CounterService
@inject IUserService UserService
@inject QMS.Domain.Interfaces.IRepository<QMS.Domain.Entities.ServiceType> ServiceTypeRepository
@inject QMS.Domain.Interfaces.IRepository<QMS.Domain.Entities.CounterServiceType> CounterServiceTypeRepository
