    private string GetInitials(string name)
    {
        if (string.IsNullOrEmpty(name)) return "??";
        var parts = name.Split(' ');
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[^1][0]}".ToUpper();
        return name.Substring(0, Math.Min(2, name.Length)).ToUpper();
    }

    private void OpenAssignModal(Counter counter)
    {
        selectedCounter = counter;
        selectedTellerId = counter.AssignedUserId?.ToString();
        assignmentNotes = null;
        showAssignModal = true;
    }

    private void CloseAssignModal()
    {
        showAssignModal = false;
        selectedCounter = null;
        selectedTellerId = null;
        assignmentNotes = null;
    }

    private async Task ConfirmAssignment()
    {
        if (selectedCounter == null || string.IsNullOrEmpty(selectedTellerId))
            return;

        try
        {
            var tellerId = int.Parse(selectedTellerId);
            
            // Check if this teller is already assigned to another counter
            var existingAssignment = counters?.FirstOrDefault(c => 
                c.AssignedUserId == tellerId && c.Id != selectedCounter.Id);
            
            if (existingAssignment != null)
            {
                // Unassign from old counter first
                Console.WriteLine($"[CounterManagement] Teller {tellerId} is already assigned to counter {existingAssignment.Id}. Unassigning first...");
                await CounterService.UnassignTellerFromCounterAsync(
                    existingAssignment.Id,
                    AuthState.UserName ?? "System",
                    $"Auto-unassigned: Teller reassigned to counter {selectedCounter.Id}"
                );
            }
            
            // Assign to new counter
            await CounterService.AssignTellerToCounterAsync(
                selectedCounter.Id,
                tellerId,
                AuthState.UserName,
                assignmentNotes
            );

            CloseAssignModal();
            await LoadData();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error assigning teller: {ex.Message}");
        }
    }

    private async Task UnassignTeller(Counter counter)
    {
        try
        {
            await CounterService.UnassignTellerFromCounterAsync(
                counter.Id,
                AuthState.UserName,
                "Unassigned by TM"
            );

            await LoadData();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error unassigning teller: {ex.Message}");
        }
    }
