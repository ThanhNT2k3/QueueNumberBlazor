<div class="counters-page">
    <!-- Header -->
    <div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1">
                <i class="bi bi-bank2 me-2 text-primary"></i>
                Counter Management
            </h2>
            <p class="text-muted mb-0">Assign and manage tellers for counters in your branch</p>
        </div>
        <button class="btn btn-outline-primary" @onclick="RefreshData" disabled="@isLoading">
            <i class="bi bi-arrow-clockwise me-2"></i>
            @(isLoading ? "Refreshing..." : "Refresh")
        </button>
    </div>
</div>

    <!-- Auth Check Loading -->
    @if (isCheckingAuth)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Verifying access...</span>
            </div>
            <p class="text-muted mt-3">Verifying your access permissions...</p>
        </div>
    }
    else
    {
        <!-- Counters Grid -->
        @if (counters == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!counters.Any())
    {
        <div class="empty-state">
            <i class="bi bi-shop"></i>
            <h4>No Counters Found</h4>
            <p>There are no counters in your branch</p>
        </div>
    }
    else
    {
        <div class="counters-grid">
            @foreach (var counter in counters)
            {
                <div class="counter-card">
                    <div class="counter-header">
                        <div class="counter-name">@counter.Name</div>
                        <div class="counter-prefix">@counter.Prefix</div>
                    </div>

                    @{
                        var statusClass = counter.Status switch
                        {
                            QMS.Domain.Enums.CounterStatus.Online => "online",
                            QMS.Domain.Enums.CounterStatus.Busy => "busy",
                            QMS.Domain.Enums.CounterStatus.Break => "break",
                            QMS.Domain.Enums.CounterStatus.Offline => "offline",
                            _ => "offline"
                        };
                        var statusText = counter.Status.ToString();
                    }
                    <div class="counter-status @statusClass">
                        <i class="bi bi-circle-fill"></i>
                        <span>@statusText</span>
                    </div>

                    <div class="assigned-user">
                        <div class="assigned-label">Assigned Teller</div>
                        @if (counter.AssignedUserId.HasValue)
                        {
                            var user = GetUserById(counter.AssignedUserId.Value);
                            if (user != null)
                            {
                                <div class="user-info-compact">
                                    <div class="user-avatar-small">
                                        @GetInitials(user.FullName)
                                    </div>
                                    <div class="user-name-small">@user.FullName</div>
                                </div>
                            }
                            else
                            {
                                <div class="text-muted small">User not found</div>
                            }
                        }
                        else
                        {
                            <div class="text-muted small">No teller assigned</div>
                        }
                    </div>
 
                    <div class="counter-services">
                        <div class="services-header">
                            <div class="services-label">Services</div>
                            <button class="edit-services-btn" @onclick="() => OpenEditServicesModal(counter)">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                        </div>
                        <div class="service-badges">
                            @if (counter.ServiceTypes != null && counter.ServiceTypes.Any())
                            {
                                @foreach (var service in counter.ServiceTypes.OrderBy(s => s.Priority))
                                {
                                    <span class="service-badge @(service.IsPrimary ? "" : "backup")" title="@(service.IsPrimary ? "Primary" : "Backup")">
                                        @if (service.IsPrimary)
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                        @service.ServiceType?.Name
                                    </span>
                                }
                            }
                            else
                            {
                                <span class="text-muted small">No services configured</span>
                            }
                        </div>
                    </div> 

                    <div class="counter-actions">
                        @{
                            var isCounterOnline = counter.Status == QMS.Domain.Enums.CounterStatus.Online || counter.Status == QMS.Domain.Enums.CounterStatus.Busy;
                        }
                        @if (!isCounterOnline || !counter.AssignedUserId.HasValue)
                        {
                            <button class="btn-assign" @onclick="() => OpenAssignModal(counter)">
                                <i class="bi bi-person-plus me-2"></i>
                                @(counter.AssignedUserId.HasValue ? "Reassign" : "Assign")
                            </button>
                        }
                        else
                        {
                            <button class="btn-assign" disabled title="Cannot assign while counter is online">
                                <i class="bi bi-lock me-2"></i>
                                Counter Online
                            </button>
                        }
                        @if (counter.AssignedUserId.HasValue && !isCounterOnline)
                        {
                            <button class="btn-unassign" @onclick="() => UnassignTeller(counter)">
                                <i class="bi bi-person-x"></i>
                            </button>
                        }
                    </div>
                </div>
            }
        </div>
    }
    }
</div>

<!-- Assign Modal -->
@if (showAssignModal && selectedCounter != null)
{
    <div class="modal-overlay" @onclick="CloseAssignModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-title">
                <i class="bi bi-person-plus me-2"></i>
                Assign Teller to @selectedCounter.Name
            </div>

            <div>
                <div class="form-label">Select Teller</div>
                <select class="form-select-custom" @bind="selectedTellerId">
                    <option value="">-- Select a teller --</option>
                    @if (availableTellers != null)
                    {
                        @foreach (var teller in availableTellers)
                        {
                            <option value="@teller.Id">@teller.FullName (@teller.Email)</option>
                        }
                    }
                </select>
                @if (availableTellers != null && !availableTellers.Any())
                {
                    <div class="text-warning small mt-2">
                        <i class="bi bi-exclamation-triangle me-1"></i>
                        All tellers are currently assigned to counters
                    </div>
                }
            </div>

            <div>
                <div class="form-label">Notes (Optional)</div>
                <textarea class="form-select-custom" rows="3" @bind="assignmentNotes" placeholder="Add any notes about this assignment..."></textarea>
            </div>

            <div class="modal-actions">
                <button class="btn-modal secondary" @onclick="CloseAssignModal">Cancel</button>
                <button class="btn-modal primary" @onclick="ConfirmAssignment">
                    <i class="bi bi-check-circle me-2"></i>
                    Assign
                </button>
            </div>
        </div>
    </div>
}

<!-- Edit Services Modal -->
@if (showEditServicesModal && selectedCounter != null)
{
    <div class="modal-overlay" @onclick="CloseEditServicesModal">
        <div class="modal-content" @onclick:stopPropagation="true" style="max-width: 600px;">
            <div class="modal-title">
                <i class="bi bi-gear me-2"></i>
                Configure Services for @selectedCounter.Name
            </div>

            <div style="margin-bottom: 1rem;">
                <p style="color: #64748b; font-size: 14px; margin: 0;">
                    Select which services this counter can handle. Mark primary services with the toggle.
                </p>
            </div>

            <div>
                @if (allServiceTypes != null)
                {
                    @foreach (var serviceType in allServiceTypes)
                    {
                        var isSelected = editingServices.Any(s => s.ServiceTypeId == serviceType.Id);
                        var isPrimary = editingServices.FirstOrDefault(s => s.ServiceTypeId == serviceType.Id)?.IsPrimary ?? false;
                        
                        <div class="service-item">
                            <div class="service-item-left">
                                <input type="checkbox" 
                                       class="service-checkbox" 
                                       checked="@isSelected"
                                       @onchange="(e) => ToggleService(serviceType.Id, (bool)e.Value!)" />
                                <span class="service-name">@serviceType.Name</span>
                            </div>
                            
                            @if (isSelected)
                            {
                                <div class="primary-toggle">
                                    <span>Primary</span>
                                    <div class="toggle-switch @(isPrimary ? "active" : "")" 
                                         @onclick="() => TogglePrimary(serviceType.Id)"
                                         >
                                        <div class="toggle-slider"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                }
            </div>

            <div class="modal-actions">
                <button class="btn-secondary" @onclick="CloseEditServicesModal">
                    <i class="bi bi-x-lg me-2"></i>
                    Cancel
                </button>
                <button class="btn-primary" @onclick="SaveServices">
                    <i class="bi bi-check-lg me-2"></i>
                    Save Changes
                </button>
            </div>
        </div>
    </div>
}

@code {
    private IEnumerable<Counter>? counters;
    private IEnumerable<User>? tellers;
    private IEnumerable<User>? availableTellers => GetAvailableTellers();
    private bool showAssignModal = false;
    private Counter? selectedCounter;
    private string? selectedTellerId;
    private string? assignmentNotes;
    private bool isCheckingAuth = true;
    private bool isLoading = false;
    
    // Edit Services Modal
    private bool showEditServicesModal = false;
    private IEnumerable<ServiceType>? allServiceTypes;
    private List<CounterServiceType> editingServices = new();


    private async Task RefreshData()
    {
        isLoading = true;
        StateHasChanged();
        
        try
        {
            Console.WriteLine("[CounterManagement] === REFRESH STARTED (Scoped) ===");
            
            if (!AuthState.BranchId.HasValue)
            {
                Console.WriteLine("[CounterManagement] No BranchId - cannot refresh");
                return;
            }
            
            // Create a new scope to get a fresh DbContext
            // This bypasses the existing DbContext's tracking cache
            using (var scope = ScopeFactory.CreateScope())
            {
                var scopedCounterService = scope.ServiceProvider.GetRequiredService<ICounterService>();
                var scopedUserService = scope.ServiceProvider.GetRequiredService<IUserService>();
                var scopedServiceTypeRepo = scope.ServiceProvider.GetRequiredService<IRepository<ServiceType>>();
                
                Console.WriteLine($"[CounterManagement] Loading fresh data for branch {AuthState.BranchId.Value}");
                
                // Load counters from fresh scope
                var loadedCounters = await scopedCounterService.GetCountersByBranchAsync(AuthState.BranchId.Value);
                counters = loadedCounters?.ToList();

                
                // Load tellers from fresh scope
                var loadedTellers = await scopedUserService.GetTellersByBranchAsync(AuthState.BranchId.Value);
                tellers = loadedTellers?.ToList();
                
                // Load service types
                allServiceTypes = (await scopedServiceTypeRepo.GetAllAsync())?.Where(s => s.IsActive).ToList();
            }
            
            Console.WriteLine($"[CounterManagement] Loaded {counters?.Count() ?? 0} counters and {tellers?.Count() ?? 0} tellers");
            
            // Log counter details
            if (counters != null)
            {
                foreach (var counter in counters)
                {
                    Console.WriteLine($"[CounterManagement] Counter {counter.Id} ({counter.Name}): Status={counter.Status}, AssignedUserId={counter.AssignedUserId}");
                }
            }
            
            Console.WriteLine("[CounterManagement] === REFRESH COMPLETED ===");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[CounterManagement] Refresh error: {ex.Message}");
            Console.WriteLine($"[CounterManagement] Stack trace: {ex.StackTrace}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        // Initial check - but don't redirect yet if we might be able to restore session
        if (AuthState.IsAuthenticated && AuthState.UserRole == "TM")
        {
            isCheckingAuth = false;
            if (AuthState.BranchId.HasValue)
            {
                await LoadData();
                StateHasChanged();
            }
        }
    }
    public void SaveServices()
    {
        
    }   
    public void ToggleService(int serviceTypeId, bool isChecked)
    {
        var service = editingServices.FirstOrDefault(s => s.ServiceTypeId == serviceTypeId);
        if (service != null)
        {
            service.IsPrimary = isChecked;
        }
    }
    public void TogglePrimary(int serviceTypeId)
    {
        var service = editingServices.FirstOrDefault(s => s.ServiceTypeId == serviceTypeId);
        if (service != null)
        {
            service.IsPrimary = !service.IsPrimary;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            if (!AuthState.IsAuthenticated)
            {
                Navigation.NavigateTo("/");
            }
            else
            {
                isCheckingAuth = false;
                StateHasChanged();
            }
        }
    }
    
    private void OpenEditServicesModal(Counter counter)
    {
        selectedCounter = counter;
        showEditServicesModal = true;
    }

    private void CloseEditServicesModal()
    {
        showEditServicesModal = false;
        selectedCounter = null;
    }

    private async Task LoadData()
    {
        try 
        {
            if (!AuthState.BranchId.HasValue) 
            {
                Console.WriteLine("[CounterManagement] LoadData skipped: No BranchId");
                return;
            }

            Console.WriteLine($"[CounterManagement] Loading data for branch {AuthState.BranchId}");
            
            // Use a fresh scope to ensure we get the latest data from DB
            using (var scope = ScopeFactory.CreateScope())
            {
                var scopedCounterService = scope.ServiceProvider.GetRequiredService<ICounterService>();
                var scopedUserService = scope.ServiceProvider.GetRequiredService<IUserService>();
                var scopedServiceTypeRepo = scope.ServiceProvider.GetRequiredService<IRepository<ServiceType>>();

                counters = (await scopedCounterService.GetCountersByBranchAsync(AuthState.BranchId.Value))?.ToList();
                tellers = (await scopedUserService.GetTellersByBranchAsync(AuthState.BranchId.Value))?.ToList();
                allServiceTypes = (await scopedServiceTypeRepo.GetAllAsync())?.Where(s => s.IsActive).ToList();
            }
            
            Console.WriteLine($"[CounterManagement] Loaded {counters?.Count() ?? 0} counters and {tellers?.Count() ?? 0} tellers");
            
            // Log each counter's status for debugging
            if (counters != null)
            {
                foreach (var counter in counters)
                {
                    Console.WriteLine($"[CounterManagement] Counter {counter.Id} ({counter.Name}): Status={counter.Status}, AssignedUserId={counter.AssignedUserId}");
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[CounterManagement] Error in LoadData: {ex}");
            // Optionally set an error message to display to the user
        }
    }

    private IEnumerable<User>? GetAvailableTellers()
    {
        if (tellers == null || counters == null) return tellers;

        // Get all assigned user IDs from counters (excluding the currently selected counter)
        var assignedUserIds = counters
            .Where(c => c.AssignedUserId.HasValue && c.Id != selectedCounter?.Id)
            .Select(c => c.AssignedUserId!.Value)
            .ToHashSet();

        // Filter out users who are already assigned
        return tellers.Where(t => !assignedUserIds.Contains(t.Id));
    }

