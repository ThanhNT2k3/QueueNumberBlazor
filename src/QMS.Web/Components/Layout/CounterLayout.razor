@code {
    private bool isDropdownOpen = false;
    private bool IsDisplayMode => Navigation.Uri.Contains("counter-display");

    protected override void OnInitialized()
    {
        AuthState.OnChange += StateHasChanged;
        Navigation.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        StateHasChanged();
    }

    private async Task CleanupSession()
    {
        if (AuthState.CounterId.HasValue)
        {
            try
            {
                var counterId = AuthState.CounterId.Value;
                Console.WriteLine($"[CounterLayout] Cleaning up session for Counter {counterId}...");
                
                // Get counter to get BranchId
                var counter = await CounterService.GetCounterByIdAsync(counterId);
                if (counter != null)
                {
                    // Set counter status to Offline
                    await CounterService.ChangeCounterStatusAsync(counterId, QMS.Domain.Enums.CounterStatus.Offline);
                    
                    // Unassign user from counter
                    await CounterService.UnassignTellerFromCounterAsync(counterId, AuthState.UserName ?? "System", "Session ended (Logout or Browser Close)");
                    
                    // Send notification to TM Counter Management
                    await NotificationService.NotifyCounterUpdatedAsync(counterId, counter.BranchId, false);
                    Console.WriteLine($"[CounterLayout] Cleanup completed for Counter {counterId}");
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"[CounterLayout] Cleanup error: {ex.Message}");
            }
        }
    }

    public async ValueTask DisposeAsync()
    {
        AuthState.OnChange -= StateHasChanged;
        Navigation.LocationChanged -= OnLocationChanged;
        
        // If user is still authenticated and has a counter assigned when disposing,
        // it likely means the browser tab was closed or connection lost.
        // We should cleanup the session.
        if (AuthState.IsAuthenticated && AuthState.CounterId.HasValue)
        {
            await CleanupSession();
        }
    }
}
